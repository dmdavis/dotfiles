alias start-sickrage='sudo service sickrage start'
alias stop-sickrage='sudo service sickrage stop'
alias mount-media='sudo mount /dev/sdb1 /media/dale/Media'
alias mount-external4tb='sudo mount /dev/sdc1 /media/dale/External4Tb'

# Check drive health via S.M.A.R.T. monitoring
function smart-health {
    sudo smartctl -H /dev/sda | sed -e "s/PASSED/$fg[green]PASSED$fg[default]/g"
    sudo smartctl -H /dev/sdb | sed -e "s/PASSED/$fg[green]PASSED$fg[default]/g"
    sudo smartctl -d sat -H /dev/sdc | sed -e "s/PASSED/$fg[green]PASSED$fg[default]/g"
}

function smart-info {
    sudo smartctl -i /dev/sda
    sudo smartctl -i /dev/sdb
    sudo smartctl -d sat -i /dev/sdc
}
